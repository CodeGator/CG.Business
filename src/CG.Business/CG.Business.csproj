<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>BG.Business</RootNamespace>
    <Description>This package contains business abstractions used by other BobbyGogs packages. 

Platforms supported:
      .NET 4.61 or above
      .NET Standard 2.0 or above</Description>
    <Company>BobbyGogs</Company>
    <Authors>Martin Cook</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2019 - 2020 by BobbyGogs. Copyright © 2010 - 2020 by CodeGator.</Copyright>
    <PackageProjectUrl>https://github.com/BobbyGogs/BG.Business</PackageProjectUrl>
    <PackageTags>business, abstrations, BG.Busness, BobbyGogs</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\BG.Business.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CG.Core" Version="2020.6.11" />
    <PackageReference Include="CG.DataAnnotations" Version="2020.1.13" />
    <PackageReference Include="CG.Validations" Version="2020.1.35" />
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.2.31">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
